<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="ru.nightgoat.needdrummer.features.findBand.FindBandViewModel" />

        <variable
            name="rvConfig"
            type="ru.nightgoat.needdrummer.core.utilities.databinding.DataBindingRecyclerViewConfig" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/size_8dp"
            app:items="@{vm.bands}"
            app:rv_config="@{rvConfig}"
            tools:itemCount="2"
            tools:listitem="@layout/item_musician" />


    </FrameLayout>

</layout>